%html
  %head
    %title TeknofireNet
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #home
    .header
      .container
        = render 'layouts/header'
    .page-alert
      = flash_messages
    .splash
      .container
        = yield :splash
    .container
      = yield
    .footer
      .container
        = render 'layouts/footer'
:javascript
  $(document).ready(function() {
    $(document).on('click', '[data-scroll]', function(evt) {
      var target = $(evt.currentTarget).data('scroll');
      if(!$(target)) { return; }
      
      evt.preventDefault();
      
      var parent = $('html,body');
      var cur_scroll = parent.scrollTop();
      parent.animate({
        scrollTop: $(target).offset().top
      });
    })
  });